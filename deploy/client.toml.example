# DyberVPN Docker Client Configuration
# Copy this to deploy/client.toml and fill in your keys

[interface]
name = "dvpn0"
address = "10.200.200.2/24"
mode = "hybrid"  # or "pqonly" for full PQ auth

# Generate with: dybervpn genkey -m hybrid
private_key = "YOUR_PRIVATE_KEY_HERE"
pq_private_key = "YOUR_PQ_PRIVATE_KEY_HERE"

# Only needed for pqonly mode:
# mldsa_private_key = "YOUR_MLDSA_PRIVATE_KEY_HERE"

[[peer]]
# Server's public keys
public_key = "SERVER_PUBLIC_KEY_HERE"
pq_public_key = "SERVER_PQ_PUBLIC_KEY_HERE"
# Only needed for pqonly mode:
# mldsa_public_key = "SERVER_MLDSA_PUBLIC_KEY_HERE"
allowed_ips = "10.200.200.0/24"
endpoint = "dybervpn-server:51820"  # Docker service name
persistent_keepalive = 25
